<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="xml-chg-1" author="han">
        <addColumn tableName="product">
            <column name="base64_image" type="TEXT">
                <constraints nullable="false" />
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="xml-chg-2" author="han">
        <addColumn tableName="orders">
            <column name="order_group_id" type="BIGINT" />
        </addColumn>
    </changeSet>

    <changeSet id="xml-chg-3" author="han">
        <dropColumn tableName="product" columnName="base64_image" />
    </changeSet>

    <changeSet id="xml-chg-4" author="han">
        <createTable tableName="product_image">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" />
            </column>

            <column name="base64_image" type="TEXT">
                <constraints nullable="false" />
            </column>

            <column name="product_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_product_image_product"
                    referencedTableName="product" referencedColumnNames="id" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="xml-chg-5" author="han">
        <addColumn tableName="orders">
            <column name="admin_message" type="TEXT" />
        </addColumn>
    </changeSet>


</databaseChangeLog>